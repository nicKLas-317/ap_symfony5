{% extends 'base.html.twig' %}

{% block title %}!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-6">
            <p><a href="{{path('categories')}}">Voir les catégories</a></p>
        </div>
        <div class="col-6">
            <p><a href="{{path('produits')}}">Voir tous les produits</a></p>
        </div>
        <div class="col-6">
            <button onClick="window.history.back();"  class="btn btn-warning" type="button">Retour</button>
        </div>
    </div>
    {# {{ dump(product) }} #}
    <p>Nom du produit sélectionné : {{ product.name}}</p>
    <p>Prix : {{ product.price}}</p>
    <p>Slug : {{ product.slug}}</p>
</div>
{% endblock %}