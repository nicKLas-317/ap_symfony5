{% extends 'base.html.twig' %}

{% block title %}Détails d'une catégorie {% endblock %}

{% block body %}


<div class="container">


    <p>Voici la liste des produits pour {{category.name }}</p>







    <table class="table">
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Editer</th>
            <th>Supprimer</th>

            {% for product in listeProduits %}
        <tr>
            <td><a href="{{path('detailProduit', {'id':product.id})}}">{{product.name}}</a></td>
            <td> {{product.price}}</td>
            <td><a href="{{path('editProduct', {'id':product.id})}}">Editer Produit</a></td>
            <td><a href="{{path('deleteProduct', {'id':product.id})}}">X</a></td> 

        </tr>
        <br />
        {% endfor %}
        </tr>
    </table>
</div>


{% endblock %}